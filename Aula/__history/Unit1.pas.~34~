unit Unit1;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Vcl.ExtCtrls, Vcl.Buttons,
  Vcl.DBCtrls, Vcl.Grids, Vcl.DBGrids, Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    DBGrid1: TDBGrid;
    DBNavigator1: TDBNavigator;
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    procedure DBNavigator1Click(Sender: TObject; Button: TNavigateBtn);
    procedure FormShow(Sender: TObject);
    procedure calcularSalarios;
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

uses unitDM;

procedure TForm1.calcularSalarios;
var
  totalSalario: real;
begin
  totalSalario := 0; // Inicializa a variável
  DM.tbClientes.First;

  while not DM.tbClientes.Eof do
  begin
    totalSalario := totalSalario + DM.tbClientes.FieldByName('salario').AsFloat; // Correção aqui

    DM.tbClientes.Next;
  end;

  label4.Caption := FloatToStr(totalSalario);
end;

procedure TForm1.DBNavigator1Click(Sender: TObject; Button: TNavigateBtn);
begin
  if button = nbPost then
  begin
    DM.tbClientes.Post; // Certifique-se de que o registro seja postado
    label2.Caption := IntToStr(DM.tbClientes.RecordCount);
  end;

  if button = nbDelete then
  begin
    DM.tbClientes.Delete; // Certifique-se de que o registro seja excluído
    label2.Caption := IntToStr(DM.tbClientes.RecordCount);
  end;

  calcularSalarios; // Mova para cá para calcular após adição ou exclusão
end;

procedure TForm1.FormShow(Sender: TObject);
begin
  if not DM.tbClientes.IsEmpty then // Verifica se o conjunto de dados não está vazio
  begin
    label2.Caption := IntToStr(DM.tbClientes.RecordCount);
    calcularSalarios;
  end;
end;

end.

